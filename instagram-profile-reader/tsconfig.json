{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "msw/node": ["tests/helpers/msw-node.ts"],
      "openai": ["tests/helpers/openai.ts"],
      "undici": ["tests/helpers/undici.ts"]
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests", "types"],
  "exclude": ["dist", "node_modules"]
} 